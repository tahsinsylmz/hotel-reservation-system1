// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Kullanici {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  sifre     String
  ad        String
  soyad     String
  telefon   String?
  rol       Rol      @default(MUSTERI)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  oteller        Otel[]        @relation("Yonetici")
  rezervasyonlar Rezervasyon[]
}

model Otel {
  id        Int      @id @default(autoincrement())
  ad        String
  aciklama  String
  adres     String
  sehir     String
  yildiz    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  yoneticiId Int
  yonetici   Kullanici @relation("Yonetici", fields: [yoneticiId], references: [id])
  odalar     Oda[]
}

model Oda {
  id        Int      @id @default(autoincrement())
  numara    String
  tip       String
  kapasite  Int
  fiyat     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  otelId         Int
  otel           Otel          @relation(fields: [otelId], references: [id])
  rezervasyonlar Rezervasyon[]
  durumlar       OdaDurumu[]
}

model Rezervasyon {
  id          Int               @id @default(autoincrement())
  girisTarihi DateTime
  cikisTarihi DateTime
  toplamFiyat Float
  durum       RezervasyonDurumu @default(AKTIF)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relations
  musteriId Int
  musteri   Kullanici @relation(fields: [musteriId], references: [id])
  odaId     Int
  oda       Oda       @relation(fields: [odaId], references: [id])
}

model OdaDurumu {
  id        Int          @id @default(autoincrement())
  tarih     DateTime
  durum     OdaDurumTipi
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  // Relations
  odaId Int
  oda   Oda @relation(fields: [odaId], references: [id])
}

enum Rol {
  ADMIN
  OTEL_YONETICISI
  MUSTERI
}

enum RezervasyonDurumu {
  AKTIF
  IPTAL_EDILDI
  TAMAMLANDI
}

enum OdaDurumTipi {
  MUSAIT
  DOLU
  TEMIZLIK
  BAKIM
}
